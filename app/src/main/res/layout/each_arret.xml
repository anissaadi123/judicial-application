<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerHorizontal="true"
    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="@color/cl_gray_sec"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center_vertical"
       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="القرار رقم"
               android:layout_gravity="start"
               android:textColor="@color/black"
               android:lineHeight="30dp"
               android:fontFamily="@font/cairobold"
               ></TextView>
           <TextView
               android:id="@+id/v_num_arret"
               android:layout_gravity="start"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="123456"
               android:textColor="@color/black"
               android:lineHeight="30dp"
               android:fontFamily="@font/cairobold"
               ></TextView>
       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="20dp"
           android:layout_weight="2"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="الصادر عن"
                   android:textColor="@color/cl_gray"
                   android:lineHeight="30dp"

                   android:fontFamily="@font/cairobold"
                   ></TextView>
               <TextView
                   android:id="@+id/v_source_arret"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="الغرفة الادارية"
                   android:textColor="@color/cl_gray"
                   android:layout_marginRight="5dp"
                   android:lineHeight="30dp"
                   android:fontFamily="@font/cairobold"
                   ></TextView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:backgroundTint="@color/cl_white"

               android:background="@color/cl_white"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="بتاريخ"
                   android:textColor="@color/black"
                   android:lineHeight="30dp"
                   android:layout_marginRight="10dp"
                   android:fontFamily="@font/cairobold"

                   ></TextView>
               <TextView
                   android:id="@+id/v_date_arret"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="07/02/2022"
                   android:textColor="@color/black"
                   android:lineHeight="30dp"
                   android:fontFamily="@font/cairobold"
                   ></TextView>

           </LinearLayout>

       </LinearLayout>

       <ImageView
           android:id="@+id/v_isfavorite_arret"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_baseline_favorite_24"
           android:layout_gravity="center_vertical"
           android:layout_weight="1"
           >

       </ImageView>
   </LinearLayout>

</androidx.cardview.widget.CardView>